RPS1=''
function zle-line-init zle-keymap-select {
    VIM_PROMPT="%F{178}%B-- COMMAND --%F{0}%b"
    RPS1="${${KEYMAP/vicmd/$VIM_PROMPT}/(main|viins)/}"
    zle reset-prompt
}

